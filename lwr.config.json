{
    "lwc": {
        "modules": [
            { "dir": "$rootDir/src/modules" },
            {
                "npm": "lwc-recipes-oss-ui-components"
            }
        ]
    },
    "bundleConfig": { "exclude": ["lwc"] },
    "assets": [
        {
            "alias": "assetsDir",
            "dir": "$rootDir/src/assets",
            "urlPath": "/assets",
            "copy": [
                {
                    "from": "**/*",
                    "to": "."
                },
                {
                    "from": "serviceWorker.js",
                    "to": "serviceWorker.js"
                }
            ]
        }
    ],
    "routes": [
        {
            "id": "home",
            "path": "/",
            "rootComponent": "ui/app",
            "layoutTemplate": "$layoutsDir/index.html"
        }
    ]
}
